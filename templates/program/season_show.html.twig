{% extends 'base.html.twig' %}

{% block title %}{{ program.id }} saison {{season.number}}
{% endblock %}
{% block body %}
	<a href="{{ path('program_show', {id: program.id }) }}">
		Retour à la série {{ program.title }}
	</a>
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }}">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
            <h2> Saison {{ season.number }}</h2>
			<p>Catégorie :
				{{ program.category.name }}</p>
			<p>{{ season.description }}</p>
		</div>
	</div>
	<div>
		{% for episode in season.episodes %}
			<div>
				<a href="{{ path('program_season_show', {programId: program.id, seasonId: season.id}) }}">Episode
					{{ episode.number }} : {{ episode.title }}</a>
			</div>
		{% endfor %}
	</div>

{% endblock %} 