{% extends 'base.html.twig' %}

{% block title %}Catégorie : 
{% endblock %}
{% block body %}
	<h1>Toutes les séries de la catégorie</h1>
	{% for program in programs %}
		<div>
			<h2>{{ program.id }}
				/
				{{ program.title }}</h2>
			<p>{{ program.summary }}</p>
			<a href="{{ path('program_show', {id: program.id }) }}">
				Voir la fiche</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}
