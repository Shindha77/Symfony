{% extends 'base.html.twig' %}

{% block title %}Acteur : {{ actor.firstname }} {{ actor.lastname }}
{% endblock %}
{% block body %}
	<h1>les séries avec  : {{ actor.firstname }} {{ actor.lastname }}</h1>
	{% for program in actor.programs %}
		<div>
			<h2>{{ program.id }}
				/
				{{ program.title }}</h2>
			<p>{{ program.synopsis }}</p>
			<a href="{{ path('program_show', {id: program.id }) }}">
				Voir la fiche</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}
	<a href="{{ path('app_index') }}">
		Retour à l'accueil
	</a>
{% endblock %}